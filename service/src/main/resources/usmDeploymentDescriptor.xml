<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ns2:deployApplicationRequest xmlns:ns2="module.user.wsdl.fisheries.ec.europa.eu">
    <method>DEPLOY_APPLICATION</method>
    <application>
        <name>${activity.name}</name>
        <description>Deployment descriptor of module "${activity.name}" version "@application.version@".</description>
        <parent>Union VMS</parent>
        <retainDatasets>true</retainDatasets>

        <feature>
            <name>ACTIVITY_ALLOWED</name>
            <description>Enables Activity module to become USM aware</description>
            <group>${activity.name}</group>
        </feature>

        <feature>
            <name>LIST_ACTIVITY_REPORTS</name>
            <description>allows user to see Activity Reports</description>
            <group>${activity.name}</group>
        </feature>

        <feature>
            <name>FISHING_TRIP_SUMMARY</name>
            <description>allows user to see Fishing Trip Summary</description>
            <group>${activity.name}</group>
        </feature>

        <feature>
            <name>VIEW_FA_REPORT_DETAILS</name>
            <description>allows user to see fishing activity reports details</description>
            <group>${activity.name}</group>
        </feature>

        <feature>
            <name>CONFIGURE_MDR_SCHEDULER</name>
            <description>allows the user to view and modify the scheduler configuration</description>
            <group>MDR</group>
        </feature>

        <feature>
            <name>LIST_MDR_CODE_LISTS</name>
            <description>allows the user to view all MDR code lists</description>
            <group>MDR</group>
        </feature>

        <feature>
            <name>UPDATE_MDR_CODE_LISTS</name>
            <description>allows the user to update all or selected list of MDR code lists</description>
            <group>MDR</group>
        </feature>

        <feature>
            <name>MANAGE_ADMIN_CONFIGURATIONS</name>
            <description>Allows you to view/update activity configurations located under the Admin tab</description>
            <group>${activity.name}</group>
        </feature>

        <option>
            <name>DEFAULT_CONFIG</name>
            <description>Default map configuation settings</description>
            <dataType>TEXT</dataType>
            <defaultValue>{
                "faReportConfigSetting": {
                    "faReport": [
                        "typeCode",
                        "fmcMarker",
                        "acceptedDateTime",
                        "creationDateTime",
                        "fluxReportDocumentId",
                        "purposeCode",
                        "referenceId",
                        "ownerFluxPartyId",
                        "status",
                        "fishingActivity",
                        "vessel"
                    ],
                    "fishingActivity": [
                        "sourceVesselId",
                        "sourceVesselTypeCode",
                        "destVesselId",
                        "destVesselTypeCode",
                        "activityTypeCode",
                        "occurence",
                        "reasonCode",
                        "vesselActivityCode",
                        "fisheryTypeCode",
                        "speciesTargetCode",
                        "operationQuantity",
                        "fishingDurationMeasure",
                        "flapDocumentId",
                        "fishingActivityIds",
                        "fishingTrip",
                        "faCatches",
                        "fishingGears",
                        "gearProblems",
                        "delimitedPeriods",
                        "fluxCharacteristics",
                        "fluxLocations"
                    ],
                    "fishingTrip": [
                        "tripType",
                        "tripId",
                        "delimitedPeriods"
                    ],
                    "delimitedPeriod": [
                        "startDate",
                        "endDate",
                        "duration"
                    ],
                    "faCatches": [
                        "typeCode",
                        "speciesCode",
                        "unitQuantity",
                        "weightMeasure",
                        "weightMeasureUnitCode"
                        "usageCode",
                        "weighingMeansCode",
                        "sizeDistributionClassCode",
                        "sizeDistributionCategoryCode",
                        "fishingGears",
                        "specifiedFluxLocations",
                        "destFluxLocations",
                        "fluxCharacteristics",
                        "fishingTrips",
                        "aapProcess",
                        "aapStock"
                    ],
                        "fishingGears": [
                        "gearType",
                        "gearRole",
                        "gearCharacteristics"
                    ],
                    "gearCharacteristics": [
                        "typeCode",
                        "description",
                        "valueMeasure",
                        "dateTime",
                        "indicator",
                        "code",
                        "text",
                        "quantity",
                    ],
                    "FluxLocations": [
                        "typeCode",
                        "countryId",
                        "rfmoCode",
                        "longitude",
                        "latitude",
                        "altitude,
                        "fluxLocationType",
                        "fluxLocationIdentifier",
                        "geopoliticalRegionCode",
